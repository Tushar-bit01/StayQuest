<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h1>Listing Details:</h1>
            <br>
        </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-img mb-2" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <b style="font-size: 1.25rem;"><%= listing.title %></b>
            <br>
            <div class="mt-1">
                <b>About:</b> <%= listing.description %>
            </div>
            <div class="mt-1">
                <b>Price:</b> &#8377;<%= listing.price.toLocaleString("en-IN") %>
            </div>
            <div class="mt-1">
                <b>Location:</b> <%= listing.location %>
            </div>
            <div class="mt-1">
                <b>Country:</b> <%= listing.country %>
            </div>     
        </p>
        </div>
      </div>
    <br> 
    </div>
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-md-1 offset-3 add-btn">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5 delete-btn">Delete</button>
    </form>
    </div>  
    <br>
</body>
