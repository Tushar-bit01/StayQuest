<% layout("/layouts/boilerplate") %>
<style>
  .filters-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap; /* allow tax toggle to wrap */
  }

  #filters {
    display: flex;
    flex-wrap: nowrap;  /* force single row */
    align-items: center;
    overflow-x: auto;  /* horizontal scroll */
    scrollbar-width: none; 
    -ms-overflow-style: none; 
    flex: 1;
    user-select: none; 
  }
  #filters.active {
  cursor: grabbing; /* optional: show grabbing cursor */
  user-select: none; /* ensure no selection while dragging */
}
  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    flex: 0 0 auto;  /* do not shrink */
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter a {
    text-decoration: none;
    color: black;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.9rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.75rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  /* Medium screens: horizontal scroll */
  @media (max-width: 992px) {
    #filters {
      flex-wrap: nowrap;
      overflow-x: auto;
    }
  }

  /* Small screens: tax toggle below */
  @media (max-width: 768px) {
    .filters-wrapper {
      flex-direction: column;
      align-items: flex-start;
    }

    #filters {
      flex-wrap: nowrap;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      width: 100%;
    }

    .tax-toggle {
      margin-top: 0.4rem;
      width: 100%;
      justify-content: center;
      margin-bottom: 1rem;
    }
  }
</style>

