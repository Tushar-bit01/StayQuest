<% layout("/layouts/boilerplate") %>

<body class="bg-light">

    <div class="container d-flex justify-content-center align-items-center vh-100">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-3">
          <div class="card-body p-4">
            
            <!-- Title -->
            <h3 class="text-center mb-4" style="color:#fe424d;">Create Account</h3>
            
            <!-- Signup Form -->
            <form action="/signup" method="POST" novalidate class="needs-validation">
              
              <!-- Username -->
              <div class="mb-3">
                <label for="username" class="form-label fw-semibold">Username</label>
                <input 
                  type="text" 
                  class="form-control border-2" 
                  id="username" 
                  name="username" 
                  placeholder="Enter username" 
                  required>
                  <div class="valid-feedback">Looks good!</div>
              </div>
  
              <!-- Email -->
              <div class="mb-3">
                <label for="email" class="form-label fw-semibold">Email</label>
                <input 
                  type="email" 
                  class="form-control border-2" 
                  id="email" 
                  name="email" 
                  placeholder="example@gmail.com" 
                  required>
              </div>
  
              <!-- Password -->
              <div class="mb-3">
                <label for="password" class="form-label fw-semibold">Password</label>
                <input 
                  type="password" 
                  class="form-control border-2" 
                  id="password" 
                  name="password" 
                  placeholder="Enter password" 
                  required>
              </div>
  
              <!-- Submit -->
              <div class="d-grid">
                <button 
                  type="submit" 
                  class="btn btn-lg text-white" 
                  style="background-color:#fe424d;">
                  Sign Up
                </button>
              </div>
              
            </form>
  
            <!-- Login Redirect -->
            <p class="text-center mt-3 mb-0">
              Already have an account? 
              <a href="/login" class="fw-semibold" style="color:#fe424d; text-decoration:none;">
                Login
              </a>
            </p>
  
          </div>
        </div>
      </div>
    </div>